<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="313.0" prefWidth="407.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.feriasdearte.Controller">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <Text fx:id="tituloText" strokeType="OUTSIDE" strokeWidth="0.0" text="Bienvenidos a Ferias de Arte" textAlignment="CENTER">
         <font>
            <Font name="System Bold Italic" size="25.0" />
         </font>
      </Text>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Proyecto Intermodular                                                        1DAW" wrappingWidth="337.83984375">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Text>
      <ImageView fx:id="imagenLogo" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../imagenes/logo.jpg" />
         </image>
      </ImageView>
      <ButtonBar fx:id="buttonBar" prefHeight="40.0" prefWidth="200.0">
         <buttons>
            <Button fx:id="asistentesButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="165.0" text="ASISTENTES" textAlignment="CENTER" textFill="#7a5757" onAction="#onasistentesButton">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="artistasButton" mnemonicParsing="false" text="ARTISTAS" textAlignment="CENTER" textFill="#7a5757" onAction="#onartistasButton">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="obrasButton" mnemonicParsing="false" prefHeight="30.0" text="OBRAS" textAlignment="CENTER" textFill="#7a5757" onAction="#onobrasButton">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </buttons>
      </ButtonBar>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="catalogoButton" mnemonicParsing="false" prefHeight="30.0" prefWidth="183.0" text="CATÁLOGO" textAlignment="CENTER" textFill="#7a5757" onAction="#oncatalogoButton">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="entradasButton" mnemonicParsing="false" text="ENTRADAS" textAlignment="CENTER" textFill="#7a5757" onAction="#onentradasButton">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="ventasButton" mnemonicParsing="false" text="VENTAS" textAlignment="CENTER" textFill="#7a5757" onAction="#onventasButton">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
        </buttons>
      </ButtonBar>
   </children>
</VBox>
